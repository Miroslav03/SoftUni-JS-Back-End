<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Name: {{creature.name}}</h1>
                <h3>Created by an author: {{owner}}</h3>
                <div class="card_character">
                    <p class="card-species">Species: {{creature.species}}</p>
                    <p class="card-skin">Skin colour: {{creature.skin}}</p>
                    <p class="card-eye">Eye Colour: {{creature.eye}}</p>
                </div>

                <p class="disc">Description: {{creature.description}}</p>

                <!-- If there is no registered user, do not display buttons-->
                {{#if isAuthenticated}}
                <div class="social-btn">
                    <!-- Only for registered user and author of the post -->
                    {{#if isOwner}}
                    <a href="/post/{{creature._id}}/edit" class="edit-btn">Edit</a>
                    <a href="/post/{{creature._id}}/delete" class="del-btn">Delete</a>
                    {{else if isSigned}}
                    <p class="thanks-for-vote">Thanks For Voting</p>
                    {{else}}
                    <a href="/post/{{creature._id}}/vote" class="vote-up">Vote</a>
                    {{/if}}
                </div>
                    {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{creature.imageUrl}}" alt="image">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                    <p class="PV">Total rating of votes: {{votesCount}}</p>
                </div>
                {{#if votesString}}
                <p class="disc">People who voted for the post - {{votesString}}</p>
                {{else}}
                <p class="disc">People who voted for the post - No one has voted yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>